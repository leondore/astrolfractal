---
import "../styles/global.css";
import { Font } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const domain = "astrologiafractal.com";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="shortcut icon" href="/favicon.ico" />

<title>Astrología Fractal</title>
<meta name="description" content={t("head.description")} />

<!-- Facebook Meta Tags -->
<meta property="og:url" content={`https://${domain}/`} />
<meta property="og:type" content="website" />
<meta property="og:title" content="Astrología Fractal" />
<meta property="og:description" content={t("head.description")} />
<meta property="og:image" content={`https://${domain}/astrofractal-og.jpg`} />
<meta property="og:logo" content={`https://${domain}/logo.png`} />

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content={domain} />
<meta property="twitter:url" content={`https://${domain}/`} />
<meta name="twitter:title" content="Astrología Fractal" />
<meta name="twitter:description" content={t("head.description")} />
<meta name="twitter:image" content={`https://${domain}/astrofractal-og.jpg`} />

<Font cssVariable="--font-inter" preload />
<Font cssVariable="--font-instrument-serif" preload />
