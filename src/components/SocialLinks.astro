---
import instagram from "../assets/instagram.svg";
import facebook from "../assets/facebook.svg";
import substack from "../assets/substack.svg";

interface Props {
  size?: number;
  class?: string;
}

const { class: className, size = 20 } = Astro.props;
const substackSize = size * 0.8;
---

<div class={className}>
  <div class="flex items-center justify-center gap-4">
    <a
      href="https://www.instagram.com/astrofractal/"
      class="text-primary"
      target="_blank"
    >
      <img src={instagram.src} alt="Instagram icon" width={size} />
    </a>
    <a
      href="https://www.facebook.com/astrofractal/"
      class="text-primary"
      target="_blank"
    >
      <img src={facebook.src} alt="Facebook icon" width={size} />
    </a>

    <a
      href="https://substack.com/@astrofractal"
      class="text-primary"
      target="_blank"
    >
      <img src={substack.src} alt="Substack icon" width={substackSize} />
    </a>
  </div>
</div>
